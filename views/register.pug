extends layout

block content
  a(href='/') back to home
  h1= 'register'
  form(action='' method='post')
    div
      label(for='name') name
      input(id='name' name='name' required type='text' value=old.name)
    div
      label(for='email') email
      input(id='email' name='email' required type='text' value=old.email)
    div
      label(for='password') password
      input(id='password' name='password' required type='password' value=old.password)
    div
      label(for='confirm_password') confirm password
      input(id='confirm_password' name='confirm_password' required type='password' value=old.confirm_password)
    div
      button(role='submit') register

  each error in errors
    p #{error}
